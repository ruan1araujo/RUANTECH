# Configurações de desenvolvimento RUANTECH V2.0
# Copie para .env e configure suas variáveis

# === BANCO DE DADOS ===
DB_HOST=localhost
DB_PORT=3306
DB_NAME=ruantech_v2
DB_USER=root
DB_PASS=

# === CACHE ===
CACHE_DRIVER=file
CACHE_PREFIX=ruantech_
REDIS_HOST=127.0.0.1
REDIS_PORT=6379

# === ANALYTICS ===
ANALYTICS_ENABLED=true
ANALYTICS_ENDPOINT=/api/analytics
GOOGLE_ANALYTICS_ID=
GOOGLE_TAG_MANAGER_ID=

# === PWA ===
PWA_NAME="RUANTECH V2.0"
PWA_SHORT_NAME="RUANTECH"
PWA_DESCRIPTION="Teia Infinita Interativa"
PWA_THEME_COLOR="#7c3aed"
PWA_BACKGROUND_COLOR="#0a0a0a"

# === API EXTERNA ===
WEBHOOK_SECRET=your_webhook_secret_here
API_RATE_LIMIT=100
API_RATE_WINDOW=3600

# === NOTIFICAÇÕES ===
PUSH_NOTIFICATIONS=true
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
NOTIFICATION_ENDPOINT=

# === DESENVOLVIMENTO ===
DEBUG_MODE=true
LOG_LEVEL=info
PERFORMANCE_MONITORING=true
ERROR_REPORTING=true

# === SEGURANÇA ===
CORS_ORIGINS=*
CSRF_TOKEN_NAME=_token
SESSION_LIFETIME=3600

# === UPLOAD ===
MAX_UPLOAD_SIZE=10M
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp,svg

# === EMAIL (opcional) ===
MAIL_DRIVER=smtp
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=noreply@ruantech.com
MAIL_FROM_NAME="RUANTECH"