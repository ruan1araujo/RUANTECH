        {
          "src": "/icons/shortcut-demos.png",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "Buscar Serviços",
      "short_name": "Busca",
      "description": "Busca rápida por serviços",
      "url": "/search",
      "icons": [
        {
          "src": "/icons/shortcut-search.png",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "Catálogo Completo",
      "short_name": "Catálogo",
      "description": "Lista completa de serviços",
      "url": "/catalogo",
      "icons": [
        {
          "src": "/icons/shortcut-catalog.png",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "Contato",
      "short_name": "Contato",
      "description": "Entre em contato conosco",
      "url": "/contato",
      "icons": [
        {
          "src": "/icons/shortcut-contact.png",
          "sizes": "192x192"
        }
      ]
    }
  ],
  
  "related_applications": [
    {
      "platform": "web",
      "url": "https://ruantech.com"
    }
  ],
  
  "prefer_related_applications": false,
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "launch_handler": {
    "client_mode": "navigate-new"
  },
  
  "handle_links": "preferred",
  
  "protocol_handlers": [
    {
      "protocol": "web+ruantech",
      "url": "/handle/%s"
    }
  ],
  
  "file_handlers": [
    {
      "action": "/handle-files",
      "accept": {
        "application/json": [".json"],
        "text/csv": [".csv"],
        "text/xml": [".xml"]
      }
    }
  ],
  
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", "application/pdf"]
        }
      ]
    }
  }
}